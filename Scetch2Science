    <script>
        document.addEventListener('mousemove', function (e) {
            const elements = document.querySelectorAll('.container, .gallery-item, .email-signup, .contact');
            const moveX = (e.clientX / window.innerWidth) - 0.5;
            const moveY = (e.clientY / window.innerHeight) - 0.5;

            elements.forEach(element => {
                element.style.transform = `translate(${moveX * 10}px, ${moveY * 10}px)`;
            });
        });
    </script>
